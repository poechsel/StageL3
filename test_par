{
        error = 0.f;
#ifnef test
        #pragma BLABLA 
        #pragma MOI (int A)
     
        for( int j = 1; j < n-1; j++) {
            for( int i = 1; i < m-1; i++ ) {
                Anew[j][i] = 0.25f * ( A[j][i+1] + A[j][i-1]
                                     + A[j-1][i] + A[j+1][i]);
                error = fmaxf( error, fabsf(Anew[j][i]-A[j][i]));
            }
        }
     
        for( int j = 0; j < n-1; j++) {
            for( int i = 0; i < m-1; i++ ) {
                A[j][i] = Anew[j][i];   
            }
        }
     
        if(iter % 100 == 0) printf("%d, %0.6fn", iter, error);
     
        iter++;
}    ;
